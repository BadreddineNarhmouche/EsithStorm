<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="esithstormPU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:comp/env/EsithStormDS</jta-data-source>
        <class>com.esithstorm.entity.User</class>
        <class>com.esithstorm.entity.Entreprise</class>
        <class>com.esithstorm.entity.Fournisseur</class>
        <class>com.esithstorm.entity.Atelier</class>
        <class>com.esithstorm.entity.Technicien</class>
        <class>com.esithstorm.entity.Chercheur</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
